{
  "name": "adg-parallels",
  "displayName": "ADG-Parallels",
  "description": "AI Delegation Grid - Parallel task processing through multiple GitHub Copilot instances in a corporate hierarchy. Many Ejajkas, One Goal! ðŸ¥š",
  "version": "0.9.0",
  "publisher": "adg-parallels",
  "author": {
    "name": "ADG-Parallels Team"
  },
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamerso/adg-parallels.git"
  },
  "bugs": {
    "url": "https://github.com/adamerso/adg-parallels/issues"
  },
  "homepage": "https://github.com/adamerso/adg-parallels#readme",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "copilot",
    "ai",
    "parallel",
    "automation",
    "multi-agent",
    "ejajka"
  ],
  "activationEvents": [
    "workspaceContains:.adg-parallels",
    "workspaceContains:worker.xml",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "adg-parallels-sidebar",
          "title": "ADG-Parallels",
          "icon": "resources/icons/adg-icon.svg"
        }
      ]
    },
    "views": {
      "adg-parallels-sidebar": [
        {
          "id": "adg-parallels.mainView",
          "name": "Control Panel",
          "type": "webview",
          "contextualTitle": "ADG-Parallels"
        }
      ]
    },
    "commands": [
      {
        "command": "adg-parallels.toggleProcessing",
        "title": "ADG: Toggle Processing",
        "category": "ADG-Parallels",
        "icon": "$(debug-start)"
      },
      {
        "command": "adg-parallels.stopProcessing",
        "title": "ADG: Stop Processing",
        "category": "ADG-Parallels",
        "icon": "$(debug-pause)"
      },
      {
        "command": "adg-parallels.resumeProcessing",
        "title": "ADG: Resume Processing",
        "category": "ADG-Parallels",
        "icon": "$(debug-continue)"
      },
      {
        "command": "adg-parallels.killProcessing",
        "title": "ADG: Kill Processing",
        "category": "ADG-Parallels",
        "icon": "$(stop-circle)"
      },
      {
        "command": "adg-parallels.openProgressDashboard",
        "title": "ADG: Open Progress Dashboard",
        "category": "ADG-Parallels",
        "icon": "$(dashboard)"
      },
      {
        "command": "adg-parallels.showHelp",
        "title": "ADG: Show Help",
        "category": "ADG-Parallels",
        "icon": "$(question)"
      },
      {
        "command": "adg-parallels.showAbout",
        "title": "ADG: About ADG-Parallels",
        "category": "ADG-Parallels",
        "icon": "$(info)"
      },
      {
        "command": "adg-parallels.provisionProject",
        "title": "ADG: Provision New Project (Legacy)",
        "category": "ADG-Parallels"
      },
      {
        "command": "adg-parallels.showProjectWizard",
        "title": "ADG: New Project Wizard",
        "category": "ADG-Parallels",
        "icon": "$(add)"
      },
      {
        "command": "adg-parallels.startWorkers",
        "title": "ADG: Start Workers",
        "category": "ADG-Parallels"
      },
      {
        "command": "adg-parallels.showStatus",
        "title": "ADG: Show Status",
        "category": "ADG-Parallels"
      },
      {
        "command": "adg-parallels.importTasksCsv",
        "title": "ADG: Import Tasks from CSV",
        "category": "ADG-Parallels"
      },
      {
        "command": "adg-parallels.claimNextTask",
        "title": "ADG: Claim Next Task (Worker)",
        "category": "ADG-Parallels"
      },
      {
        "command": "adg-parallels.completeTask",
        "title": "ADG: Complete Current Task (Worker)",
        "category": "ADG-Parallels"
      },
      {
        "command": "adg-parallels.executeTask",
        "title": "ADG: Execute Task (AI)",
        "category": "ADG-Parallels"
      },
      {
        "command": "adg-parallels.aggregateOutputs",
        "title": "ADG: Aggregate Subtask Outputs",
        "category": "ADG-Parallels"
      },
      {
        "command": "adg-parallels.generateReport",
        "title": "ADG: Generate Status Report",
        "category": "ADG-Parallels"
      },
      {
        "command": "adg-parallels.startAudit",
        "title": "ADG: Start Audit for Completed Tasks",
        "category": "ADG-Parallels"
      }
    ],
    "languageModelTools": [
      {
        "name": "adg_status",
        "displayName": "ADG Status",
        "toolReferenceName": "adg_status",
        "icon": "$(info)",
        "modelDescription": "Get current ADG-Parallels project status including active workers, pending tasks, and overall progress."
      },
      {
        "name": "adg_list_tasks",
        "displayName": "ADG List Tasks",
        "toolReferenceName": "adg_list_tasks",
        "icon": "$(list-ordered)",
        "modelDescription": "List all tasks in the project with their current status."
      },
      {
        "name": "adg_claim_task",
        "displayName": "ADG Claim Task",
        "toolReferenceName": "adg_claim_task",
        "icon": "$(check)",
        "modelDescription": "Atomically claim the next available task for a worker."
      },
      {
        "name": "adg_complete_task",
        "displayName": "ADG Complete Task",
        "toolReferenceName": "adg_complete_task",
        "icon": "$(check-all)",
        "modelDescription": "Mark a task as successfully completed."
      },
      {
        "name": "adg_fail_task",
        "displayName": "ADG Fail Task",
        "toolReferenceName": "adg_fail_task",
        "icon": "$(error)",
        "modelDescription": "Mark a task as failed with an error message."
      },
      {
        "name": "adg_worker_heartbeat",
        "displayName": "ADG Heartbeat",
        "toolReferenceName": "adg_worker_heartbeat",
        "icon": "$(pulse)",
        "modelDescription": "Send a heartbeat signal for a worker."
      },
      {
        "name": "adg_get_dashboard",
        "displayName": "ADG Dashboard",
        "toolReferenceName": "adg_get_dashboard",
        "icon": "$(dashboard)",
        "modelDescription": "Get comprehensive dashboard statistics."
      },
      {
        "name": "adg_list_workers",
        "displayName": "ADG List Workers",
        "toolReferenceName": "adg_list_workers",
        "icon": "$(organization)",
        "modelDescription": "List all workers in the project hierarchy."
      },
      {
        "name": "adg_get_events",
        "displayName": "ADG Events",
        "toolReferenceName": "adg_get_events",
        "icon": "$(history)",
        "modelDescription": "Get recent events from the audit log."
      },
      {
        "name": "adg_register_worker",
        "displayName": "ADG Register Worker",
        "toolReferenceName": "adg_register_worker",
        "icon": "$(add)",
        "modelDescription": "Register a new worker in the project."
      },
      {
        "name": "adg_update_worker_status",
        "displayName": "ADG Update Worker",
        "toolReferenceName": "adg_update_worker_status",
        "icon": "$(edit)",
        "modelDescription": "Update the status of a worker."
      },
      {
        "name": "adg_create_tasks",
        "displayName": "ADG Create Tasks",
        "toolReferenceName": "adg_create_tasks",
        "icon": "$(new-file)",
        "modelDescription": "Create new tasks in bulk."
      },
      {
        "name": "adg_init_project",
        "displayName": "ADG Init Project",
        "toolReferenceName": "adg_init_project",
        "icon": "$(folder-opened)",
        "modelDescription": "Initialize the SQLite runtime database for a new project."
      },
      {
        "name": "adg_install_vsix",
        "displayName": "ADG Install VSIX",
        "toolReferenceName": "adg_install_vsix",
        "icon": "$(package)",
        "modelDescription": "Install or update the ADG-Parallels extension from a VSIX file."
      },
      {
        "name": "adg_reload_window",
        "displayName": "ADG Reload Window",
        "toolReferenceName": "adg_reload_window",
        "icon": "$(refresh)",
        "modelDescription": "Reload the VS Code window to apply extension updates."
      },
      {
        "name": "adg_build_extension",
        "displayName": "ADG Build Extension",
        "toolReferenceName": "adg_build_extension",
        "icon": "$(tools)",
        "modelDescription": "Build the ADG-Parallels extension. Compiles TypeScript and optionally packages VSIX."
      },
      {
        "name": "adg_spawn_worker_window",
        "displayName": "ADG Spawn Worker",
        "toolReferenceName": "adg_spawn_worker_window",
        "icon": "$(window)",
        "modelDescription": "Spawn a new VS Code window for a worker."
      }
    ],
    "chatParticipants": [
      {
        "id": "adg-parallels.adg",
        "name": "adg",
        "fullName": "ADG-Parallels Assistant",
        "description": "Chat about your ADG-Parallels project - check status, list tasks, monitor workers, and more!",
        "isSticky": true,
        "commands": [
          {
            "name": "status",
            "description": "Get current project status and progress"
          },
          {
            "name": "tasks",
            "description": "List tasks (optionally filter by status)"
          },
          {
            "name": "workers",
            "description": "Show all workers and their status"
          },
          {
            "name": "events",
            "description": "View recent audit log events"
          }
        ]
      }
    ],
    "configuration": {
      "title": "ADG-Parallels",
      "properties": {
        "adg-parallels.defaultWorkerCount": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 16,
          "description": "Default number of workers to create"
        },
        "adg-parallels.heartbeatInterval": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "maximum": 120,
          "description": "Heartbeat interval in seconds"
        },
        "adg-parallels.unresponsiveThreshold": {
          "type": "number",
          "default": 90,
          "minimum": 30,
          "maximum": 300,
          "description": "Time in seconds before worker is considered unresponsive"
        },
        "adg-parallels.workerAutoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start task execution when a worker window opens"
        },
        "adg-parallels.workerAutoStartDelay": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Delay in milliseconds before auto-starting task execution (increase if VS Code shows update dialogs)"
        },
        "adg-parallels.workerAutoClose": {
          "type": "boolean",
          "default": true,
          "description": "Automatically close worker window after all tasks are completed"
        },
        "adg-parallels.workerAutoCloseDelay": {
          "type": "number",
          "default": 3000,
          "minimum": 0,
          "maximum": 30000,
          "description": "Delay in milliseconds before auto-closing worker window (gives time to see completion message)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsix": "npx -y vsce package"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "fast-xml-parser": "^4.5.1",
    "mustache": "^4.2.0"
  },
  "overrides": {
    "undici": "5.28.4"
  }
}
